<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_talk_words"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/options_choose_btn_selector"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_message_add"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="添加语言"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_icon_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_message_add"
            android:background="@drawable/icon_add_btn_selector" />
    </RelativeLayout>

</LinearLayout>
