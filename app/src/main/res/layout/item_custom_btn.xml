<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">

    <Button
        android:id="@+id/btn_item_click"
        android:layout_width="@dimen/slv_item_width"
        android:layout_height="@dimen/slv_item_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/txt_item_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slv_item_height2"
        android:layout_toLeftOf="@id/btn_item_click"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/txt_gray"
        android:textSize="24sp" />
</RelativeLayout>